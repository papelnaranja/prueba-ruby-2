
<div class="row">
  <div class="col-md-4">
      <div class="card">
        <img src="<%= @task.photo %>" alt="" class="card-img-top">
  
        <div class="card-body">
          
          <h3 class="card-title"><%= @task.name  %></h3>
          <p class="card-text"> <%= @task.description %> </p>
        </div>
      </div>
    </div>

  <div class="col-md-8">
    <h4>Primeros en completar la tarea</h4>
<table class="table">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Estado de completado</th>
      <th>Fecha</th>
    </tr>
  </thead>
  <tbody>

  <% @sorted.each  do |t| %>
    <% if  t.completed == true %>
   <tr>
      <td><%= t.completed %></td>
      <td><%= t.user.email %></td>
      <td><%= t.created_at %></td>
    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
  </div>
</div>



